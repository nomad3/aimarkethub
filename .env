#  .env (archivo principal)
# ==============================
# Configuraci贸n esencial
# ==============================

# Backend (FastAPI)
DATABASE_URL=postgresql://admin:secret@postgres:5432/aimarkethub
REDIS_URL=redis://redis:6379/0
OPENAI_KEY=sk-tu-clave-de-openai  # REQUERIDO
API_SECRET_KEY=tu-clave-secreta-para-jwt  # Recomendado para producci贸n

# Frontend (React)
VITE_API_URL=http://localhost:8000  # URL de la API
VITE_GA_TRACKING_ID=UA-XXXXX-X  # Opcional: Google Analytics
VITE_SENTRY_DSN=  # Opcional: Sentry para monitoreo

# ==============================
# Configuraci贸n avanzada
# ==============================

# Base de Datos (PostgreSQL)
POSTGRES_DB=aimarkethub
POSTGRES_USER=admin
POSTGRES_PASSWORD=secret  # Cambiar en producci贸n
POSTGRES_PORT=5432

# Redis
REDIS_CACHE_TTL=3600  # 1 hora en segundos
REDIS_HOST=redis
REDIS_PORT=6379

# Celery (Worker)
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1
CELERY_TASK_TIME_LIMIT=300  # 5 minutos

# Rate Limiting
API_RATE_LIMIT=100/1hour  # L铆mite global de peticiones
ADMIN_RATE_LIMIT=10/minute  # L铆mite para endpoints admin

# Entorno
APP_ENV=development  # development|staging|production
DEBUG=true  # Solo para desarrollo

# Seguridad
CORS_ALLOWED_ORIGINS=*
CSRF_TRUSTED_ORIGINS=*
HTTPS_ONLY=true

# Optimizaci贸n
WORKER_CONCURRENCY=4
UVICORN_WORKERS=4
NODE_ENV=production